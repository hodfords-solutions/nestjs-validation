{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@hodfords/nestjs-validation": ["lib"]
    }
  },
  "include": [
    "lib",
    "sample" 
  ],
  "exclude": [
    "tests",
    "dist",
    "node_modules"
  ]
}
